rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // QR codes: Allow server-side reads for redirects, authenticated user access for management
    match /qrcodes/{qrCodeId} {
      // Allow Firebase functions to read QR codes for redirects (server-side)
      // This is necessary for the redirect function to work
      allow read: if true;

      // Allow authenticated users to read/write their own QR codes
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // Allow GUEST QR code creation (unauthenticated)
      // Constraints:
      // - Must be marked as guest code
      // - userId must be null
      // - Must have expiration time
      // - Expiration must be within 25 hours (24h + buffer)
      allow create: if request.auth == null
        && request.resource.data.isGuest == true
        && request.resource.data.userId == null
        && request.resource.data.expiresAt != null
        && request.resource.data.expiresAt <= request.time + duration.value(25, 'h');
    }

    // Users can read/write their own subscriptions
    match /subscriptions/{subscriptionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Scans collection - allow server-side writes, authenticated users to read all scans
    // (they can only read scans for QR codes they own via client-side filtering)
    match /scans/{scanId} {
      // Allow authenticated users to read scans
      // Client-side code filters to only show scans for their QR codes
      allow read: if request.auth != null;

      // Allow Firebase functions to write scan data (needed for analytics)
      allow write: if true;
    }

    // Allow server-side access to plans for subscription logic
    match /plans/{planId} {
      allow read: if true;
    }
  }
}